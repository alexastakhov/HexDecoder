<Window x:Class="HexDecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="inputTextBox" Grid.Row="0" Margin="0,1" />
        <TextBox x:Name="decodedDataTextBox" Grid.Row="1" IsReadOnly="True" Margin="0,1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Decode" Margin="15" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
